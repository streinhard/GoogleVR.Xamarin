<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:gvr="clr-namespace:GoogleVR.Forms;assembly=GoogleVR.Forms"
    x:Class="GoogleVR.Forms.SampleApp.VideoPage"
    Title="Video Widget">
     <StackLayout>
        <gvr:VrVideo
            x:Name="video"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            Clicked="OnClicked"
            DisplayModeChanged="OnDisplayModeChanged"
            LoadSuccess="OnLoadSuccess"
            LoadError="OnLoadError"
            PositionChanged="OnPositionChanged"
        />
        <Grid
            Padding="10"
            RowSpacing="5">
            <Slider
                x:Name="positionSlider"
                IsVisible="false"
                ValueChanged="OnVideoSliderValueChanged"
                Minimum="0"
                Maximum="10"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
            <Button
                Text="Play"
                Clicked="OnPlay"
                Grid.Row="1"
                Grid.Column="0" />
            <Button
                Text="Pause"
                Clicked="OnPause"
                Grid.Row="1"
                Grid.Column="1" />
        </Grid>
    </StackLayout>
</ContentPage>
