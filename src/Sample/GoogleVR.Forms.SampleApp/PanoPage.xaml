<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GoogleVR.Forms.SampleApp"
    xmlns:gvr="clr-namespace:GoogleVR.Forms;assembly=GoogleVR.Forms"
    x:Class="GoogleVR.Forms.SampleApp.PanoPage"
    Title="Panorama Widget">
    <StackLayout>
        <gvr:VrPanorama
            x:Name="panorama"
            VerticalOptions="FillAndExpand" />
        <Grid
            Padding="10"
            RowSpacing="5">
            <Label
                Text="Info Button"
                VerticalTextAlignment="Center"
                Grid.Row="0"
                Grid.Column="0" />
            <Switch
                BindingContext="{x:Reference panorama}"
                IsToggled="{Binding InfoButtonEnabled}"
                HorizontalOptions="FillAndExpand"
                Grid.Row="0"
                Grid.Column="1"/>

            <Label
                Text="Touch Tracking"
                VerticalTextAlignment="Center"
                Grid.Row="0"
                Grid.Column="2"/>
            <Switch
                BindingContext="{x:Reference panorama}"
                IsToggled="{Binding TouchTrackingEnabled}"
                HorizontalOptions="FillAndExpand"
                Grid.Row="0"
                Grid.Column="3" />
            
            <Label
                Text="Stereo Mode"
                VerticalTextAlignment="Center"
                Grid.Row="1"
                Grid.Column="0"/>
            <Switch
                BindingContext="{x:Reference panorama}"
                IsToggled="{Binding StereoModeButtonEnabled}"
                HorizontalOptions="FillAndExpand"
                Grid.Row="1"
                Grid.Column="1" />
            
            <Label
                Text="Transition"
                VerticalTextAlignment="Center"
                Grid.Row="1"
                Grid.Column="2"/>
            <Switch
                BindingContext="{x:Reference panorama}"
                IsToggled="{Binding TransitionViewEnabled}"
                HorizontalOptions="FillAndExpand"
                Grid.Row="1"
                Grid.Column="3" />
            
            <Button
                Text="Pause Rendering"
                Clicked="OnPauseRenderingClicked"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2" />
            <Button
                Text="Resume Rendering"
                Clicked="OnResumeRenderingClicked"
                Grid.Row="2"
                Grid.Column="2"
                Grid.ColumnSpan="2"/>
        </Grid>
    </StackLayout>
</ContentPage>
